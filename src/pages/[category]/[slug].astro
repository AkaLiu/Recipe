---
import { getCollection, render } from 'astro:content';
import RecipeLayout from '../../layouts/RecipeLayout.astro';
import RecipeMeta from '../../components/RecipeMeta.astro';

export async function getStaticPaths() {
  const recipes = await getCollection('recipes');
  return recipes.map((recipe) => {
    // Extract slug from filename (keeps Chinese characters)
    const id = recipe.id;
    const slug = id.replace(/\.mdx?$/, '').split('/').pop() || '';
    return {
      params: {
        category: recipe.data.category,
        slug: slug
      },
      props: { recipe },
    };
  });
}

const { recipe } = Astro.props;
const { Content } = await render(recipe);
---

<RecipeLayout
  title={`${recipe.data.title} | 菜谱`}
  description={recipe.data.titleEn || recipe.data.title}
>
  <!-- Hero Section with Cover Image (hidden in print) -->
  <div
    class="relative h-80 md:h-[28rem] bg-cover bg-center no-print"
    style={`background-image: url('${recipe.data.coverImage}')`}
  >
    <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/30 to-black/60"></div>
    <div class="absolute inset-0 flex flex-col items-center justify-center text-white p-4">
      <span class="bg-terracotta-600/90 px-4 py-1.5 rounded-full text-sm mb-4 backdrop-blur-sm">{recipe.data.category}</span>
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-center drop-shadow-lg">{recipe.data.title}</h1>
      {recipe.data.titleEn && <p class="text-xl md:text-2xl mt-3 text-white/90 drop-shadow">{recipe.data.titleEn}</p>}
    </div>
  </div>

  <article class="print:w-full print:p-0">
    <!-- Print Header -->
    <header class="hidden print:block mb-6 border-b-2 border-terracotta-600 pb-4">
      <div class="flex justify-between items-baseline">
        <h1 class="text-3xl font-bold text-terracotta-800 font-serif">{recipe.data.title}</h1>
        {recipe.data.titleEn && <span class="text-lg text-gray-500">{recipe.data.titleEn}</span>}
      </div>
      <p class="text-sm text-gray-600 mt-1">{recipe.data.category}</p>
    </header>

    <!-- Meta Info (screen only) -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 no-print">
      <RecipeMeta
        prepTime={recipe.data.prepTime}
        cookTime={recipe.data.cookTime}
        bakeTime={recipe.data.bakeTime}
        coolTime={recipe.data.cookTime}
        difficulty={recipe.data.difficulty}
        robot={recipe.data.robot}
      />
    </div>

    <!-- Print Meta Info -->
    <div class="hidden print:flex gap-6 mb-6 text-sm text-gray-700">
      {recipe.data.difficulty && <span><strong>难度:</strong> {recipe.data.difficulty}</span>}
    </div>

    <!-- Recipe Content -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 print:p-0 print:max-w-none">
      <div class="prose prose-lg max-w-none prose-headings:text-terracotta-700 prose-headings:font-serif print:prose-headings:text-terracotta-800">
        <Content />
      </div>
    </div>

    <!-- Action Buttons (screen only) -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 no-print">
      <div class="flex flex-wrap gap-4">
        <a
          href="/Recipe"
          class="px-6 py-3 border-2 border-terracotta-600 text-terracotta-600 rounded-lg hover:bg-terracotta-50 transition-colors font-medium inline-flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          返回主菜单
        </a>
        <a
          href={`/Recipe/${recipe.data.category}`}
          class="px-6 py-3 border-2 border-terracotta-600 text-terracotta-600 rounded-lg hover:bg-terracotta-50 transition-colors font-medium inline-flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          返回 {recipe.data.category}
        </a>
      </div>
    </div>
  </article>
</RecipeLayout>
