---
import { getCollection, render } from 'astro:content';
import RecipeLayout from '../../../layouts/RecipeLayout.astro';
import RecipeMeta from '../../../components/RecipeMeta.astro';

export async function getStaticPaths() {
  const recipes = await getCollection('recipes');
  return recipes.map((recipe) => {
    // Extract slug from filename (keeps Chinese characters)
    const id = recipe.id;
    const slug = id.replace(/\.mdx?$/, '').split('/').pop() || '';
    return {
      params: {
        category: recipe.data.category,
        slug: slug
      },
      props: { recipe },
    };
  });
}

const { recipe } = Astro.props;
const { Content } = await render(recipe);
---

<RecipeLayout
  title={`${recipe.data.title} | 菜谱`}
  description={recipe.data.titleEn || recipe.data.title}
>
  <!-- Hero Section (hidden in print) -->
  <div class="relative h-64 md:h-96 bg-cover bg-center no-print" style={`background-image: url('${recipe.data.coverImage}')`}>
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="absolute inset-0 flex flex-col items-center justify-center text-white p-4">
      <span class="bg-terracotta-600 px-3 py-1 rounded-full text-sm mb-4">{recipe.data.category}</span>
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-center">{recipe.data.title}</h1>
      {recipe.data.titleEn && <p class="text-xl md:text-2xl mt-2 text-cream-200">{recipe.data.titleEn}</p>}
    </div>
  </div>

  <article class="print:w-full print:p-0">
    <!-- Print Header -->
    <header class="hidden print:block mb-6 border-b-2 border-terracotta-600 pb-4">
      <div class="flex justify-between items-baseline">
        <h1 class="text-3xl font-bold text-terracotta-800 font-serif">{recipe.data.title}</h1>
        {recipe.data.titleEn && <span class="text-lg text-gray-500">{recipe.data.titleEn}</span>}
      </div>
      <p class="text-sm text-gray-600 mt-1">{recipe.data.category}</p>
    </header>

    <!-- Meta Info (screen only) -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 no-print">
      <RecipeMeta
        prepTime={recipe.data.prepTime}
        cookTime={recipe.data.cookTime}
        bakeTime={recipe.data.bakeTime}
        coolTime={recipe.data.cookTime}
        servings={recipe.data.servings}
        robot={recipe.data.robot}
      />
    </div>

    <!-- Print Meta Info -->
    <div class="hidden print:flex gap-6 mb-6 text-sm text-gray-700">
      {recipe.data.prepTime && <span><strong>准备:</strong> {recipe.data.prepTime}</span>}
      {recipe.data.cookTime && <span><strong>烹饪:</strong> {recipe.data.cookTime}</span>}
      {recipe.data.servings && <span><strong>份量:</strong> {recipe.data.servings}人份</span>}
    </div>

    <!-- Recipe Content -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 print:p-0 print:max-w-none">
      <div class="prose prose-lg max-w-none prose-headings:text-terracotta-700 prose-headings:font-serif print:prose-headings:text-terracotta-800">
        <Content />
      </div>
    </div>

    <!-- Action Buttons (screen only) -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 no-print">
      <div class="flex flex-wrap gap-4">
        <button
          onclick="window.print()"
          class="px-6 py-3 bg-terracotta-600 text-white rounded-lg hover:bg-terracotta-700 transition-colors font-medium inline-flex items-center gap-2 cursor-pointer"
          aria-label="导出 PDF"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          导出 PDF
        </button>
        <a
          href={`/recipes/${recipe.data.category}`}
          class="px-6 py-3 border-2 border-terracotta-600 text-terracotta-600 rounded-lg hover:bg-terracotta-50 transition-colors font-medium inline-flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          返回 {recipe.data.category}
        </a>
      </div>
    </div>

    <!-- Print Footer -->
    <div class="hidden print:block mt-8 pt-4 border-t text-center text-xs text-gray-400">
      <p>菜谱收藏 | Recipe Collection</p>
    </div>
  </article>
</RecipeLayout>
