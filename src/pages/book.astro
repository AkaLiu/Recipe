  return content
    .split(/\n\d+\.\s*/)
    .filter(s => s.trim().length > 0);
}

// Helper function to parse tips from recipe body
function parseTips(body: string): string[] {
  const match = body.match(/##\s*Â∞èË¥¥Â£´[\s\S]*?$/i);
  if (!match) return [];
  const content = match[0].replace(/##\s*Â∞èË¥¥Â£´[\s\S]*?/, '');
