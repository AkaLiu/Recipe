// Helper function to parse ingredients from recipe body
function parseIngredients(body: string): string[] {
  const match = body.match(/##\s*È£üÊùê[\s\S]*?(\n|$)(?=##\s*Ê≠•È™§)/i);
  if (!match) return [];
  const table = match[0].replace(/##\s*È£üÊùê[\s\S]*?(\n|$)/, '');
